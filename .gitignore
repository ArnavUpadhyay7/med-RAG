# Create .gitignore before adding any files
cat > .gitignore << 'EOF'
# Virtual environments
venv/
env/
.venv/
.env/

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
*.egg
*.egg-info/
dist/
build/

# Environment variables
.env
.env.local

# IDE
.vscode/
.idea/

# OS
.DS_Store
Thumbs.db

# Large files
*.pdf
*.zip
*.tar.gz
EOF